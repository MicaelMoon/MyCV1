@inherits LayoutComponentBase

<div class="page">
    
	@if (ToggleNavMenu)
	{
		<div class="sidebar">
			<NavMenu />
		</div>
	}
	<CascadingValue Value="ToggleNavMenu">
		<article class="content px-4">
			@Body
		</article>
	</CascadingValue>

</div>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>

@code{

	[Parameter]
    public bool ToggleNavMenu { get; set; } = false;

}


